<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dialer">

    <!-- Permissions to use the Calling function on the phone -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_call_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_call_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
                NOTES TO ASSESSOR:
                ==================
                - Forcing Soft Keyboard Hiding with "stateHidden"
                - Screen has been forced to be oriented in "portrait"
                android:screenOrientation="portrait"
        -->
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>